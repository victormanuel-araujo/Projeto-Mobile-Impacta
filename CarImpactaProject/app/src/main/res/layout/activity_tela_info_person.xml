<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.TelaInfoPerson">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="46dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="47dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Nome da Pessoa"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="42dp"
                android:textStyle="bold"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="47dp" />

            <TextView
                android:id="@+id/txtApelido"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="183dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="183dp"
                android:text="Vulgo "
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDividaTotal"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="199dp"
                android:layout_marginBottom="13dp"
                android:text="Dívida total R$: --,--"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginRight="199dp"
                android:layout_marginLeft="46dp"
                android:gravity="start" />

            <TextView
                android:id="@+id/txtValorPorViagem"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginEnd="148dp"
                android:layout_marginBottom="32dp"
                android:text="Paga R$: --,-- por viagem"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="start"
                android:layout_marginRight="148dp"
                android:layout_marginLeft="46dp" />

            <ListView
                android:id="@+id/listViewHistorico"
                android:layout_width="326dp"
                android:layout_height="371dp"
                android:layout_gravity="center"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="43dp"
                android:layout_marginBottom="39dp"
                android:layout_marginRight="43dp"
                android:layout_marginLeft="42dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnQuitarDivida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:paddingHorizontal="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Quitar dívida"
        android:background="@drawable/button_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>